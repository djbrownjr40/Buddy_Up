# build  bootsrap container and itteraete over the activities and build a card for each one

<div class ="container mt-3">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Activities</h1>
    <%= link_to new_activity_path, class: 'text-dark text-decoration-none' do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>
  <div class="cards">
    <% @activities.each do |activity| %>
      <%= render 'activities/card', activity: activity %>
    <% end %>
  </div>
</div>
